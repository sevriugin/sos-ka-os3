	body(leftmargin='0', marginwidth='0', topmargin='0', marginheight='0', offset='0')
		center
			table(align='center', border='0', cellpadding='0', cellspacing='0', height='100%', width='100%', id='bodyTable')
				tr
					td(align='center', valign='top', id='bodyCell')
						table(border='0', cellpadding='0', cellspacing='0', id='templateContainer')
							tr
								td(align='center', valign='top')
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templatePreheader')
										tr
											td(valign='top', class='preheaderContent', style='padding-top:10px; padding-right:20px; padding-bottom:10px; padding-left:20px;')
												| Thank you for shopping with us. 
											td(valign='top', width='180', class='preheaderContent', style='padding-top:10px; padding-right:20px; padding-bottom:10px; padding-left:0;')
												| Email not displaying correctly?
												br
												a(href='*|ARCHIVE|*', target='_blank')
													| View it in your browser.
							tr
								td(align='center', valign='top')
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templateHeader')
										tr
											td(valign='top', class='headerContent')
												img(src='http://bimbi-yabe.rhcloud.com/img/order_mail_pic.jpeg', style='max-width:600px;', id='headerImage')
							tr
								td(align='center', valign='top')
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templateBody')
										tr
											td(valign='top', class='bodyContent')
												h1
													| SOS-ka
													span 
														| Shop 
												h3 Интернет-магазин эксклюзивных сосок
												| #{invoice.firstname}, спасибо, что воспользовались нашим интернет-магазином
												br
												br
												if invoice.updateId
													h2 Ваш заказ (#{count}) изменен
												else
													h2 Ваш заказ (#{count})
												h4 #{invoice.id}
												| ФИО : #{invoice.firstname} #{invoice.lastname}
												br
												| Телефон: #{invoice.phone}  e-mail: #{invoice.email} 
												br
												if invoice.delivery_option == "takeaway"
													| Адрес самовывоза : 125438, г.Москва, ул. Автомоторная дом 7, стр. 1, Склад "Шиптор", тел.: +7 (915) 436-41-75
													br
												else
													| Адрес доставки : #{invoice.address} #{invoice.address2}
													|                  #{invoice.city}, #{invoice.postal} 
													br
												| Предпочтительная дата 
												if invoice.delivery_option == "takeaway"
													| самовывоза
												else
													| доставки 
												| : #{invoice.delivery_date}
												br
												| Предпочтительное время 
												if invoice.delivery_option == "takeaway"
													| самовывоза
												else
													| доставки 
												| : #{invoice.delivery_time}
												br
												| Вы заказали следующий товар :
							tr
								td(align='center', valign='top')
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templateColumns')
										each item in invoice.items
											tr
												td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
													table(border='0', cellpadding='20', cellspacing='0', width='100%')
														tr
															td(class='leftColumnContent')
																img(src='#{item.imgUrl}', style='max-width:260px;', class='columnImage')
														
												td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
													table(border='0', cellpadding='20', cellspacing='0', width='100%')
														tr
															td(valign='top', class='leftColumnContent')
																h3 #{item.title}
																| #{item.cost} руб. X #{item.qty}
																br
																br
																if item.id == "LexiCard-Dog-3m" || item.id == "LexiCard-Cat-3m"
																	a(href='https://fb.com/msg/LexiClub')
																		| Активация через Facebook
																		| &nbsp;
																	a(href='https://telegram.me/LexiBot')
																		| Активация через Telegram
																		| &nbsp;
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templateColumns')
										tr
											td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
												table(border='0', cellpadding='20', cellspacing='0', width='100%')
													tr
														td(class='leftColumnContent')
															h3= 'Всего : ' + invoice.total
										tr
											td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
												table(border='0', cellpadding='20', cellspacing='0', width='100%')
													tr
														td(class='leftColumnContent')
															h3= 'На сумму : ' + invoice.amount + ' руб.'
										tr
											td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
												table(border='0', cellpadding='20', cellspacing='0', width='100%')
													tr
														td(class='leftColumnContent')
															h3= 'Доставка : ' + invoice.delivery + ' руб.'
										tr
											td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
												table(border='0', cellpadding='20', cellspacing='0', width='100%')
													tr
														td(class='leftColumnContent')
															h3= 'Налог : ' + invoice.tax + ' руб.'
										tr
											td(align='center', valign='top', class='templateColumnContainer', style='padding-top:20px;')
												table(border='0', cellpadding='20', cellspacing='0', width='100%')
													tr
														td(class='leftColumnContent')
															h3= 'Итого : ' + invoice.totalAmount + ' руб.'
							tr
								td(align='center', valign='top')
									table(border='0', cellpadding='0', cellspacing='0', width='100%', id='templateFooter')
										tr
											td(valign='top', class='footerContent')
												a(href='https://instagram.com/wn_moscow')
													| Follow on Twitter
												| &nbsp;&nbsp;&nbsp;
												a(href='https://www.facebook.com/soskawubbanub')
													| Friend on Facebook
												| &nbsp;&nbsp;&nbsp;
												a(href='*|FORWARD|*')
													| News subscription: #{invoice.news}
												| &nbsp;
										tr
											td(valign='top', class='footerContent', style='padding-top:0;')
												em Copyright &copy; 2016 SOS-ka, All rights reserved.
												br
												br
										tr
											td(valign='top', class='footerContent', style='padding-top:0;')
												a(href='*|UNSUB|*')
													| unsubscribe from this list
												| &nbsp;&nbsp;&nbsp;
												a(href='*|UPDATE_PROFILE|*')
													| update subscription preferences
												| &nbsp;